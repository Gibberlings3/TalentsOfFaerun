	///////////////////////////////

	// copy of the Flame Blade spell
	
	COPY_EXISTING "%CLERIC_FLAME_BLADE%.spl" "override/%spl_genasi_flame_blade%.spl"
		WRITE_SHORT 0x1c 4
		SAY 0x50 @714
