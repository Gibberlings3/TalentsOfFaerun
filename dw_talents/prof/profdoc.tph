DEFINE_ACTION_FUNCTION usability_by_class
RET_ARRAY class_weapon_use_strings
BEGIN
	ACTION_CLEAR_ARRAY class_weapon_use_strings
	// define prototypes
	ACTION_CLEAR_ARRAY prototype_array
	ACTION_DEFINE_ASSOCIATIVE_ARRAY prototype_array BEGIN
		longsword=>SW1H04
		shortsword=>SW1H07
		bastardsword=>SW1H01
		2hsword=>SW2H01
		scimitar=>SW1H20
		katana=>SW1H43
		wakizashi=>SW1H46
		ninjato=>SW1H48
		dagger=>DAGG01
		battleaxe=>AX1H01
		throwingaxe=>AX1H04
		mace=>blun04
		flail=>blun02
		morningstar=>blun06
		warhammer=>hamm01
		club=>blun01
		staff=>staf01
		longbow=>bow03
		shortbow=>bow05
		lightcrossbow=>xbow01
		heavycrossbow=>xbow04
		dart=>dart01
		sling=>slng01		
	END
	// setup
	ACTION_CLEAR_ARRAY class_usability_array
	ACTION_FOR_EACH class IN 
	FIGHTER MAGE CLERIC THIEF DRUID RANGER PALADIN BARBARIAN BLACKGUARD MONK BARD SORCERER SHAMAN 
	FIGHTER_CLERIC FIGHTER_MAGE FIGHTER_THIEF FIGHTER_DRUID CLERIC_MAGE CLERIC_THIEF MAGE_THIEF CLERIC_RANGER 
	FIGHTER_MAGE_THIEF FIGHTER_MAGE_CLERIC 
	DW_BARBARIAN_CLERIC DW_BARBARIAN_DRUID DW_DRUID_MAGE DW_DRUID_RANGER DW_DRUID_THIEF FAVORED_SOUL
	BEGIN
		OUTER_SPRINT $class_usability_array("%class%") ""
		OUTER_SPRINT $class_unusability_array("%class%") ""
		OUTER_SET $usability_restriction_count("%class%")=0
		OUTER_SET $not_this_weapon("%class%")=0
	END
	// go through prototypes
	ACTION_PHP_EACH prototype_array AS label=>item BEGIN
		COPY_EXISTING - "%item%.itm" nowhere
			not_this_weapon_FAVORED_SOUL=0
			READ_STRREF 0x8 name
			byte1=BYTE_AT 0x1e
			not_this_weapon_BARD=(byte1 BAND BIT6)
			not_this_weapon_CLERIC=(byte1 BAND BIT7)
			byte2=BYTE_AT 0x1f
			not_this_weapon_CLERIC_MAGE=(byte2 BAND BIT0)
			not_this_weapon_DW_DRUID_MAGE=not_this_weapon_CLERIC_MAGE
			not_this_weapon_CLERIC_THIEF=(byte2 BAND BIT1)
			not_this_weapon_DW_DRUID_THIEF=not_this_weapon_CLERIC_THIEF
			not_this_weapon_CLERIC_RANGER=(byte2 BAND BIT2)
			not_this_weapon_DW_DRUID_RANGER=not_this_weapon_CLERIC_RANGER
			not_this_weapon_FIGHTER=(byte2 BAND BIT3)
			not_this_weapon_FIGHTER_DRUID=(byte2 BAND BIT4)
			not_this_weapon_FIGHTER_MAGE=(byte2 BAND BIT5)
			not_this_weapon_FIGHTER_CLERIC=(byte2 BAND BIT6)
			not_this_weapon_FIGHTER_MAGE_CLERIC=(byte2 BAND BIT7)
			byte3=BYTE_AT 0x20
			not_this_weapon_FIGHTER_MAGE_THIEF=(byte3 BAND BIT0)
			not_this_weapon_FIGHTER_THIEF=(byte3 BAND BIT1)
			not_this_weapon_MAGE=(byte3 BAND BIT2)
			not_this_weapon_MAGE_THIEF=(byte3 BAND BIT3)
			not_this_weapon_PALADIN=(byte3 BAND BIT4)
			not_this_weapon_RANGER=(byte3 BAND BIT5)
			not_this_weapon_THIEF=(byte3 BAND BIT6)
			byte4=BYTE_AT 0x21
			not_this_weapon_MONK=(byte4 BAND BIT5)
			not_this_weapon_DRUID=(byte4 BAND BIT6)
			not_this_weapon_SHAMAN=(byte4 BAND BIT6)
			exclude_barbarians=((BYTE_AT 0x29) BAND BIT6)
			not_this_weapon_BARBARIAN = not_this_weapon_FIGHTER || exclude_barbarians
			not_this_weapon_DW_BARBARIAN_CLERIC = not_this_weapon_FIGHTER_CLERIC || exclude_barbarians
			not_this_weapon_DW_BARBARIAN_DRUID = not_this_weapon_FIGHTER_DRUID || exclude_barbarians
			not_this_weapon_SORCERER=not_this_weapon_MAGE
			not_this_weapon_BLACKGUARD=not_this_weapon_PALADIN
			GET_OFFSET_ARRAY fx_arr ITM_V10_GEN_EFFECTS
			PHP_EACH fx_arr AS fx_ind=>fx_off BEGIN
				PATCH_IF SHORT_AT fx_off = 319 BEGIN // restrict item
					PATCH_IF LONG_AT (fx_off+0x8)=5 BEGIN // restrict item:class
					class=LONG_AT (fx_off+0x4)
					not_this_weapon_DRUID=not_this_weapon_DRUID ||(class=IDS_OF_SYMBOL (class DRUID))
					not_this_weapon_SHAMAN=not_this_weapon_SHAMAN || (class=IDS_OF_SYMBOL (class SHAMAN))
					END ELSE
					PATCH_IF LONG_AT (fx_off+0x8)=6 BEGIN // restrict item:specific
						specific=LONG_AT (fx_off+0x4)
						not_this_weapon_MAGE=not_this_weapon_MAGE || (specific=IDS_OF_SYMBOL (specific MAGE_UNUSABLE))
						not_this_weapon_CLERIC_THIEF=not_this_weapon_CLERIC_THIEF || (specific=IDS_OF_SYMBOL (specific CLERIC_UNUSABLE))
						not_this_weapon_CLERIC_MAGE=not_this_weapon_CLERIC_MAGE || (specific=IDS_OF_SYMBOL (specific CLERIC_UNUSABLE))
						not_this_weapon_CLERIC_RANGER=not_this_weapon_CLERIC_RANGER || (specific=IDS_OF_SYMBOL (specific CLERIC_UNUSABLE))
						not_this_weapon_DRUID=not_this_weapon_DRUID || (specific=IDS_OF_SYMBOL (specific DRUID_UNUSABLE))
						not_this_weapon_DW_DRUID_MAGE=not_this_weapon_DW_DRUID_MAGE || (specific=IDS_OF_SYMBOL (specific DRUID_UNUSABLE))
						not_this_weapon_DW_DRUID_RANGER=not_this_weapon_DW_DRUID_RANGER || (specific=IDS_OF_SYMBOL (specific DRUID_UNUSABLE))
						not_this_weapon_DW_DRUID_THIEF=not_this_weapon_DW_DRUID_THIEF || (specific=IDS_OF_SYMBOL (specific DRUID_UNUSABLE))
						not_this_weapon_SHAMAN=not_this_weapon_SHAMAN || (specific=IDS_OF_SYMBOL (specific SHAMAN_UNUSABLE))
					END					
				END
			END
			PHP_EACH class_usability_array AS class=>usable BEGIN
				SET $usability_restriction_count("%class%") += $not_this_weapon("%class%")
				PATCH_IF $not_this_weapon("%class%") BEGIN
					SPRINT unusable $class_unusability_array("%class%")
					SPRINT $class_unusability_array("%class%") "%unusable%%name%, "
				END ELSE BEGIN
					SPRINT $class_usability_array("%class%") "%usable%%name%, "				
				END
			END
	END
	// tidy strings
	ACTION_PHP_EACH class_usability_array AS class=>usable BEGIN
		OUTER_PATCH_SAVE "class_usability_array_%class%" "%usable%" BEGIN
			REPLACE_TEXTUALLY " ," ","
			REPLACE_TEXTUALLY ", $" ""
		END
	END
	ACTION_PHP_EACH class_unusability_array AS class=>unusable BEGIN
		OUTER_PATCH_SAVE "class_unusability_array_%class%" "%unusable%" BEGIN
			REPLACE_TEXTUALLY " ," ","
			REPLACE_TEXTUALLY ", $" ""
		END
	END
	// make actual output
	WITH_TRA "%sfo_tra_loc%/english/profdoc.tra" "%sfo_tra_loc%/%LANGUAGE%/profdoc.tra" BEGIN
		OUTER_SPRINT any_weapon_string @4
		OUTER_SPRINT may_use_these_weapons @5
		OUTER_SPRINT any_weapon_except @6
	END
	ACTION_PHP_EACH usability_restriction_count AS class=>count BEGIN
		ACTION_IF count=0 BEGIN // any weapon
			ACTION_TO_LOWER class
			OUTER_SPRINT $class_weapon_use_strings("%class%") "%any_weapon_string%"
		END ELSE
		ACTION_IF count<=3 BEGIN // display negatively
			OUTER_SPRINT unusable $class_unusability_array("%class%")
			ACTION_TO_LOWER class
			OUTER_SPRINT $class_weapon_use_strings("%class%") "%may_use_these_weapons%%any_weapon_except%%unusable%."
		END ELSE BEGIN //display positively
			OUTER_SPRINT usable $class_usability_array("%class%")
			ACTION_TO_LOWER class
			OUTER_SPRINT $class_weapon_use_strings("%class%") "%may_use_these_weapons%%usable%."		
		END
	END







END

